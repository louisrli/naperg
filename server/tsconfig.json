{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "lib": [
      "es2021"
    ],
    "target": "es2021",
    "strict": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "script/**/*",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
